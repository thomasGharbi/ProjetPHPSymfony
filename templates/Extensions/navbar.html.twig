                    {% else %}


                        <a class="m-2 app-white app-fs-0-8em" href="{{ path('app_login') }}">CONNEXION</a>
                        <a class="m-2 app-fs-0-8em app-white" href="{{ path('app_registration') }}">INSCRIPTION</a>

                    {% endif %}


                </div>
            </div>
        </div>
    </div>

{% endblock %}
