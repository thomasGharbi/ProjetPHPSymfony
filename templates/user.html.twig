                <br>note de rapidité : {{ notice.speedNotice }} <br> note de prix : {{ notice.priceNotice }} {% if him_self %}
                    <a href="{{ path('app_delete_notice',{uuidNotice:notice.uuid}) }}">suppimer l'avis</a>
                {% endif %} </div>
            {% for image in notice.images %}
                {% if image is defined %}
                    <img src="{{ asset( image) }}" width="100" height="100"/>
                {% endif %}
            {% endfor %}

        {% endfor %}


{% endblock %}




