{% extends 'base.html.twig' %}



{% block body %}
    {% block js %}<script type="module" src="{{ asset('/javascript/add_input_form_conversation.js') }}"></script>{% endblock %}
    <p></p>
{{ user.firstName }}
    {% if (conversationForm) %}
        {{ form_start(conversationForm) }}
        {{ form_end(conversationForm) }}
    {% endif %}
    <img src="{{ asset( user.profileImage) }}" width="100" height="100"/>
nom d'utilisateur : {{ user.username }}<br>

    {% if user.isVerified %}
