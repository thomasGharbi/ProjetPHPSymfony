{% for label, messages in app.flashes %}
<section class="container">
     <div class="alert alert-{{ label }} alert-dismissible fade show h5 my-4" role="alert">
      {% for message in messages %}
    <p class="text-center font-weigt-bold">{{message|raw}}</p>
      {% endfor %}
      <button>
      <span aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">&times;</span>
      </button>
     </div>
     </section>
{% endfor %}